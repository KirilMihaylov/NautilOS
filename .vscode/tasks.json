{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Loader (x86)",
			"type": "process",
			"command": "cargo",
			"args": [
				"build_uefi",
				"--target=i686-unknown-uefi"
			],
			"group": "build",
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Build Docs (x86)",
			"type": "process",
			"command": "cargo",
			"args": [
				"doc_uefi",
				"--target=i686-unknown-uefi"
			],
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Open Docs (x86)",
			"type": "process",
			"command": "cargo",
			"args": [
				"doc_uefi",
				"--target=i686-unknown-uefi",
				"--open"
			],
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Run Clippy (x86)",
			"type": "process",
			"command": "cargo",
			"args": [
				"clippy_uefi",
				"--target=i686-unknown-uefi"
			],
			"group": "build",
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Build Loader (x86_64)",
			"type": "process",
			"command": "cargo",
			"args": [
				"build_uefi"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Build Docs (x86_64)",
			"type": "process",
			"command": "cargo",
			"args": [
				"doc_uefi"
			],
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Open Docs (x86_64)",
			"type": "process",
			"command": "cargo",
			"args": [
				"doc_uefi",
				"--open"
			],
			"problemMatcher": [
				"$rustc"
			],
		},
		{
			"label": "Run Clippy (x86_64)",
			"type": "process",
			"command": "cargo",
			"args": [
				"clippy_uefi"
			],
			"group": "build",
			"problemMatcher": [
				"$rustc"
			],
		},
	]
}